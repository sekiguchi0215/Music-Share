<div class="row">
	<!--レイアウト用-->
	<div class="col-sm-4"></div>
	<!--レイアウト用-->

	<!--新規投稿フォーム-->
	<div class="col-sm-4">
		<%= form_for(@song) do |f| %>

			<!--エラーメッセージ-->
			<% if @song.errors.any? %>
				<h4><%= @song.errors.count %>errors</h4>
				<ul>
					<% @song.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			<% end %>
			<!--エラーメッセージ-->

			<div class="field">
				<%= f.label :"イメージ画像" %>
				<%= f.attachment_field :image %>
			</div>

			<div class="field">
				<%= f.label :"曲名" %>
				<%= f.text_field :title %>
			</div>

			<div class="field">
				<%= f.label :"アーティスト名" %>
				<%= f.text_field :artist_name %>
			</div>

			<div class="field">
				<%= f.label :"本文" %>
				<%= f.text_area :body %>
			</div>

			<div class="actions">
				<%= f.submit "投稿する" %>
			</div>
		<% end %>
	</div>
	<!--新規投稿フォーム-->

	<!--レイアウト用-->
	<div class="col-sm-4"></div>
	<!--レイアウト用-->
</div>