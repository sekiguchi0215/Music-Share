<div class="row">
	<div class="col-3"></div>

	<!--<%=  %>-->
	<div class="col-9">	
		<!--エラー表示-->
		<% if @song.errors.any? %>
			<h3><%= @song.errors.count %></h3>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>
		<!--エラー表示-->
		<!--編集フォーム-->
		<%= form_for(@song) do |f| %>
			<div class="field">
				<%= f.label :"イメージ画像" %>
				<%= f.attachment_field :image %>
			</div>
			<div class="field">
				<%= f.label :"曲名" %>
				<span>♪</span> <%= f.text_field :title %>
			</div>
			<div class="field">
				<%= f.label :"アーティスト名" %>
				<%= f.text_field :artist_name %>
			</div>
			<div class="field">
				<%= f.label :"本文" %>
				<%= f.text_area :body %>
			</div>
			<div class="action">
				<%= f.submit :"編集を保存する" %>
			</div>
		<% end %>
	</div>
</div>	