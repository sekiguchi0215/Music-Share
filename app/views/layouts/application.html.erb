<!DOCTYPE html>
<html>
  <head>
    <title>MusicShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>
  <!--  -->

  <body>
    <div class="body">
      <div class="mask">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #ffeeff">
          <div class="container-fluid">
            <!--ヘッダー-->
            <div class="navbar-header">
              <div class="navbar-left">
                <!--ロゴ-->
                <%= link_to root_path do %>
                  <%= image_tag "logo.png", size: "200x100" %>
                <% end %>
              </div>
            </div>

            <div class="navbar-right">
              <ul>
                <% if user_signed_in? %>
                  <!--ログイン中-->
                  <li class="nav-item">
                    <%= link_to users_path do %>
                       <span class="glyphicon glyphicon-user" aria-hidden="true">&nbsp;<strong>ユーザーリスト</strong></span>
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to songs_path do %>
                       <span class="glyphicon glyphicon-music" aria-hidden="true">&nbsp;<strong>投稿一覧</strong></span>
                    <% end %>
                  </li>
                <% else %>
                  <!--ログイン外-->
                  <li class="nav-item">
                    <%= link_to root_path do %>
                      <span class="glyphicon glyphicon-home" aria-hidden="true">&nbsp;<strong>Top</strong></span>
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true">&nbsp;<strong>アバウト</strong></span>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_user_registration_path do %>
                      <span class="glyphicon glyphicon-edit" aria-hidden="true">&nbsp;<strong>新規登録</strong></span>
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_user_session_path do %>
                      <span class="glyphicon glyphicon-edit" aria-hidden="true">&nbsp;<strong>ログイン</strong></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>

          </div>
        </nav>

        <div class="container-fluid">
          <p class="notice"><%= notice %></p>
          <%= yield %>
        </div>
      </div>
    </div>

    <footer class="fixed-bottom" style="background-color: #ffeeff" >
      <p class="copyright">©︎MusicShare</p>
    </footer>
  </body>
</html>
