<!DOCTYPE html>
<html>
  <head>
    <title>MusicShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>
  <!--  -->

  <body>
    <div class="body">
      <div class="mask">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #ffeeff">
          <div class="container-fluid">
            <!--ヘッダー-->
            <div class="navbar-header">
              <div class="navbar-left">
                <!--ロゴ-->
                <%= link_to root_path do %>
                  <%= image_tag "logo.png", size: "200x100" %>
                <% end %>
              </div>
            </div>

            <div class="navbar-right">
              <ul>
                <% if user_signed_in? %>
                  <!--ログイン中-->
                  <li class="nav-item">
                    <%= link_to users_path do %>
                       <i class="fas fa-user" style="font-size: 20px;"></i>
                       &nbsp;<strong>ユーザーリスト</strong>
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to songs_path do %>
                       <i class="fab fa-itunes-note" style="font-size: 23px;"></i>
                       &nbsp;<strong>投稿一覧</strong>
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to destroy_user_session_path, method: :delete do %>
                      <i class="fas fa-sign-out-alt" style="font-size: 23px;"></i>
                      &nbsp;<strong>ログアウト</strong>
                    <% end %>
                  </li>
                <% else %>
                  <!--ログイン外-->
                  <li class="nav-item">
                    <%= link_to root_path do %>
                      <i class="fas fa-home" style="font-size: 20px;"></i>
                      &nbsp;<strong>Top</strong>
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to about_path do %>
                      <i class="fas fa-paperclip" style="font-size: 20px;"></i>
                      &nbsp;<strong>アバウト</strong>
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_user_registration_path do %>
                      <i class="fas fa-user-plus" style="font-size: 20px;"></i>
                      &nbsp;<strong>新規登録</strong>
                    <% end %>
                  </li>
                  <li class="nav-item">
                    <%= link_to new_user_session_path do %>
                      <i class="fas fa-sign-in-alt" style="font-size: 20px;"></i>
                      &nbsp;<strong>ログイン</strong>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>

          </div>
        </nav>

        <div class="container-fluid">
          <p class="notice"><%= notice %></p>
          <%= yield %>
        </div>
      </div>
    </div>

    <footer class="" style="background-color: #ffeeff" >
      <p class="copyright">©︎MusicShare</p>
    </footer>
  </body>
</html>
