<!DOCTYPE html>
<html>
  <head>
    <title>MusicShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <!--  -->

  <body>
    <!--ヘッダー-->
    <header>
      <div class="container container-fluid">
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #eeffff">
            <!--ロゴ-->
            <%= link_to root_path do %>
              <%= image_tag "logo.png", size: "150x75" %>
            <% end %>
            <!--ロゴ-->
          <div class="navbar-right">
            <ul>
              <% if user_signed_in? %>
                <!--ログイン中-->
                <li class="nav-item">
                  <%= link_to "マイページ", current_user, class: "nav-link btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ユーザーリスト", users_path, class: "nav-link btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "投稿一覧", songs_path, class: "nav-link btn" %>
                </li>
                <li class="nav-item"><%= link_to " ログアウト", destroy_user_session_path, method: :delete, class: "nav-link btn" %></li>
                <!--ログイン中-->
              <% else %>
                <!--ログイン外-->
                <li class="nav-item">
                  <%= link_to "Top", root_path, class: "nav-link btn" %>
                </li>
                <li class="nav-item">
                  アバウト
                </li>
                <li class="nav-item">
                  <%= link_to " 新規登録", new_user_registration_path, class: "nav-link btn" %>    
                </li>
                <li class="nav-item">
                  <%= link_to " ログイン", new_user_session_path, class: "nav-link btn" %>
                </li>
                <!--ログイン外-->
              <% end %>
            </ul>
          </div>
        </nav>   
      </div>
    </header>
    <!--ヘッダー-->

    <div class="container">
      <p class="notice"><%= notice %></p>
      <%= yield %>
    </div>
    
  </body>
</html>
