
<div class="row">

  <div class="col-lg-3"></div>

  <div class="col-lg-6">
    <div class="background">
      <div class="text-center login-box">

          <h1 class="sign-in">ログイン</h1>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <strong><p>メールアドレス</p></strong>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50" %>
            </div>

            <div class="field">
              <strong><p>パスワード</p></strong>
              <%= f.password_field :password, autocomplete: "current-password", size: "50" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :"ログインを記憶する" %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="sign-up-path">
            会員登録は<%= link_to "こちら", new_registration_path(resource_name) %>
          </div>
        </div>
      </div>
          
    </div>
  </div>
    
  <div class="col-lg-3"></div>

</div>
