<div class="row">

  <div class="col-lg-3"></div>

  <div class="col-lg-6">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="background">
      <div class="text-center signup-box">
        <div class="masking">
          <h1 class="sign-up">新規会員登録</h1>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="field">
              <strong><p>ユーザー名</p></strong>
              <%= f.text_field :name, size: "50" %>
            </div>

            <div class="field">
              <strong><p>メールアドレス</p></strong>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "50" %>
            </div>

            <div class="field">
              <strong><p>パスワード（6文字以上）</p></strong>
              <%= f.password_field :password, autocomplete: "new-password", size: "50" %>
            </div>

            <div class="field">
              <strong><p>パスワード（確認用）</p></strong>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "50" %>
            </div>

            <div class="actions">
              <%= f.submit "会員登録", class: "btn btn-success" %>
            </div>
          <% end %>

          <div class="sign-in-path">
            登録済みの方は<%= link_to "こちら", new_session_path(resource_name) %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3"></div>

</div>




